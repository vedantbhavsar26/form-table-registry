{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!src/__registry__"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": "error"
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			},
			"recommended": true,
			"correctness": {
				"noNestedComponentDefinitions": "warn"
			},
			"a11y": {
				"useSemanticElements": "warn",
				"useFocusableInteractive": "warn",
				"useAriaPropsForRole": "warn",
				"useKeyWithClickEvents": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"tailwindDirectives": true,
			"cssModules": true
		}
	},
	"assist": {
		"enabled": true,

		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
